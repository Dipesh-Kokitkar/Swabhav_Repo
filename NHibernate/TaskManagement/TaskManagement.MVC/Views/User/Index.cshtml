
@{
    Layout = null;
}
@using TaskManagement.MVC.Models.User;
@model IndexViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body class="jumbotron container">
    <div class="container">
        <div>
            <h1 class="text-center h1">Task Management</h1>
        </div>
        <div>
            <h4 class="text-center h4">Login</h4>
            <p class="text-danger">@Model.Error</p>
            <div class="text-center">
                @using (Html.BeginForm(FormMethod.Post))
            {
                    <p>Username:@Html.TextBoxFor((model) => model.Username)@Html.ValidationMessageFor((model) => model.Username)</p>
                    <p>Username:@Html.TextBoxFor((model) => model.Password)@Html.ValidationMessageFor((model) => model.Password)</p>
                    <input type="submit" value="Login" />
                    <p class="text-center">OR</p>
                    <p class="text-center">@Html.ActionLink("New User Click Here","Register","User")</p>
                }
            </div>
        </div>
    </div>
</body>
</html>
