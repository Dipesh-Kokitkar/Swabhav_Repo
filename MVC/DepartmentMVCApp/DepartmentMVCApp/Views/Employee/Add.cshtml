
@{
    Layout = null;
}
@using DepartmentMVCApp.Models.Employee;
@model AddViewModel
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body class="jumbotron container">
    <div class="container">
        <h4 class="text-center">Add New Employee</h4>
        <div class="container">
            @using (Html.BeginForm(FormMethod.Post)) {
                <p>Department:@Html.DropDownListFor((model)=>model.SelectedDepartment,new SelectList(Model.departments),"Select Department",null)</p>
                <p>Name:@Html.TextBoxFor((model)=>model.Name)@Html.ValidationMessageFor((model)=>model.Name)</p>
                <p>Salary:@Html.TextBoxFor((model) => model.Salary)@Html.ValidationMessageFor((model) => model.Salary)</p>
                <p>Comssion:@Html.TextBoxFor((model) => model.Comission)@Html.ValidationMessageFor((model) => model.Comission)</p>
                <p>Date Of Joining:@Html.TextBoxFor((model) => model.DateofJoin)@Html.ValidationMessageFor((model) => model.DateofJoin)</p>
                <input type="submit" value="Add"/>
            }
        </div> 
    </div>
</body>
</html>
