
@{
    Layout = null;
}
@using TaskManagement.MVC.Models.User;
@model RegisterViewModel
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body class="jumbotron container">
    <div class="container">
        <div>
            <h1 class="text-center h1">Task Management</h1>
        </div>
        <div>
            <h4 class="text-center h4">Registration Form</h4>
            @using (Html.BeginForm(FormMethod.Post)) {
                <p>Username:@Html.TextBoxFor((model)=>model.Name)@Html.ValidationMessageFor((model)=>model.Name)</p>
                <p>Password:@Html.TextBoxFor((model) => model.Password)@Html.ValidationMessageFor((model) => model.Password)</p>
                <p>Confirm Password:@Html.TextBoxFor((model) => model.Confirmpaswword)@Html.ValidationMessageFor((model) => model.Confirmpaswword)</p>
                <p>Mobile Number:@Html.TextBoxFor((model) => model.MobileNumber)@Html.ValidationMessageFor((model) => model.MobileNumber)</p>
                <p>Email ID:@Html.TextBoxFor((model) => model.Email)@Html.ValidationMessageFor((model) => model.Email)</p>
                <input class="btn-primary" type="submit" value="Register"/>
            }
        </div>
    </div>
</body>
</html>
